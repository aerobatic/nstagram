*
  border-radius: 0 !important;

.ig-item
  max-width: 350px;
  min-height: 350px;
  padding: 10px;
  display: inline;
  position: relative;

.ig-item-info
  position: absolute;
  background-color: #2f2f2f;
  color: #fff;
  height: 80px;
  opacity: 0.65;
  z-index: 99999;
  width: 340px;
  margin-left: 10px;
  margin-top: 200px;
  
.ig-item-user-img
  width: 80px;

.topbar
  background-color: #88d1a5
  height: 40px

.search-form
  margin-top: 30px

  .input-group
    width: 300px
    margin-left: 8px

    button
      border-color: #88d1a5
      border-width: 2px
      border-left-width: 0
      height: 40px
      color: #88d1a5

  input
    border-color: #88d1a5
    border-width: 2px
    height: 40px

  input:focus
    border-color: #88d1a5

  button.search-type
    background-color: gray
    width: 40px
    height: 40px

  button.search-type.active
    background-color: #88d1a5


